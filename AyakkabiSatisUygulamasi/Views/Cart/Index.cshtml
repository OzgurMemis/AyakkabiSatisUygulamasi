@model AyakkabiSatisUygulamasi.Dto.CartViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}


<!-- Page Header Start -->
<div class="container-fluid bg-light mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">Sepetim</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a href="/Home/Index">Ana Sayfa</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0">Sepetim</p>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Cart Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-bordered text-center mb-0">
                <thead class="bg-secondary text-dark">
                    <tr>
                        <th>Ürünler</th>
                        <th>Fiyat</th>
                        <th>Adet</th>
                        <th>Toplam</th>
                        <th>Sepeti Sil</th>
                    </tr>
                </thead>
                <tbody class="align-middle">

                    @foreach(var item in Model.cartitems)
                    {
                        
                   

                    <tr>
                        <td class="align-middle"><img src="/Urunler/@item.Image" alt="" style="width: 50px;">@item.ProductName</td>
                        <td class="align-middle">@item.Price</td>
                        <td class="align-middle">
                            <div class="input-group quantity mx-auto" style="width: 100px;">
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-primary btn-minus" type="button" onclick="location.href='@Url.Action("Decrease", "Cart", new { id = item.ProductId })'">
                                            <i class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                <input type="text" class="form-control form-control-sm bg-secondary text-center" value="@item.Quantity">

                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-primary btn-plus" type="button" onclick="location.href='@Url.Action("Add", "Cart", new { id = item.ProductId })'">
                                            <i class="fa fa-plus"></i>
                                        </button>
                                        </div>
                                
                            </div>
                        </td>
                        <td class="align-middle">@item.Price</td>
                        

                           



                                @*                         <td class="align-middle"><button class="btn btn-sm btn-primary"><i class="fa fa-times"></i></button></td>
 *@                        
                                <td class="align-middle">
                                <button class="btn btn-sm btn-primary" type="button" onclick="location.href='@Url.Action("Remove", "Cart", new { id = item.ProductId })'"><i class="fa fa-times"></i></button>
                                @*
                                <button type="button" onclick="location.href='@Url.Action("Remove", "Cart", new { id = item.ProductId })'">Sil</button>
                                <button type="button" onclick="location.href='@Url.Action("Add", "Cart", new { id = item.ProductId })'">Artır</button>
                            *@
                                </tr>
                            
                     }
                    
                   
                    
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Sepet Özeti</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3 pt-1">
                        <h6 class="font-weight-medium">Ara Toplam</h6>
                        <h6 class="font-weight-medium">@Model.GrandTotal</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Kargo</h6>
                        <h6 class="font-weight-medium">10</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Kargo Bedava</h6>
                        <h6 class="font-weight-medium"><del>10</del></h6>
                    </div>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    <div class="d-flex justify-content-between mt-2">
                        <h5 class="font-weight-bold">Toplam</h5>
                        <h5 class="font-weight-bold">@Model.GrandTotal</h5>
                    </div>
                    <button class="btn btn-block btn-primary my-3 py-3">Siparişi Tamamla</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->

