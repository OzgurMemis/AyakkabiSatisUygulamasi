@model AyakkabiSatisUygulamasi.Models.ConfirmUser;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<h1 style="text-align: center;">Mail Onaylama</h1>
<form method="post" asp-action="Index" asp-controller="ConfirmMail" style="text-align: center;">
    <div class="form-group">
        <h2>Onay Formundaki Gönderilen Mail Adresi:@ViewBag.Email</h2>
        <input class="form-control" type="text" value="@ViewBag.Email" asp-for="Mail"/>
    </div>
    <div class="form-group">
        <h2>Onay Kodunuzu Giriniz!</h2>
        <input class="form-control" type="text" asp-for="ConfirmCode"/>
    </div>
    <div class="form-group" style="text-align: center;">
        <button class="btn btn-primary" type="submit">Hesabı Onayla</button>
     </div>
</form>

